<%= render 'shared/errors', obj: @article %>
<div class="container">
    <div class="form">
      <%= form_for @article do |f| %>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :title %>
          </div>
          <div>
            <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :description %>
          </div>
          <div>
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article" %>
          </div>
        </div>
        <div class="form-group row" id="checkboxs">
          <div>
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :category_name do |box|  %>
              <%= box.label(class: "checkbox-inline input_checkbox") { box.check_box(class: "checkbox") + " " + box.text }%>
            <% end %>
          </div>
        </div>
        <div class="form-group row">
          <div id="article-btn">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
            <%= link_to "Cancel", articles_path, class: "btn btn-secondary btn-lg" %>
        </div>
      <% end %>
    </div>
</div>