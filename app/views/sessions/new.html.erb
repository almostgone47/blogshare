<h1 align="center" >Login</h1>

<div class="container">
    <div class="form">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :email %>
          </div>
          <div>
            <%= f.email_field :email, class: "form-control", placeholder: "Valid email required", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :password %>
          </div>
          <div>
            <%= f.password_field :password, class: "form-control", placeholder: "Must be at least 4 characters" %>
          </div>
        </div>
        <div class="form-group row">
          <div id="article-btn">
            <%= f.submit "Login", class: "btn btn-primary btn-lg" %> or
            <%= link_to "Sign in with Google", "/auth/google_oauth2", class: "btn btn-primary btn-lg"%>
          </div>
        </div>
      <% end %>
    </div>
</div>