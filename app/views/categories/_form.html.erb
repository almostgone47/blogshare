<%= render 'shared/errors', obj: @category %>
<div class="container">
    <div class="form">
      <%= form_for @category do |f| %>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :category_name %>
          </div>
          <div>
            <%= f.text_field :category_name, class: "form-control", placeholder: "Enter name of category" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :description %>
          </div>
          <div>
            <%= f.text_field :description, class: "form-control", placeholder: "Category Description" %>
          </div>
        </div>
        <div class="form-group row">
          <div id="article-btn">
            <%= f.submit( "Submit", class: 'btn btn-primary btn-lg') %>
          </div>
            <%= link_to "Cancel", root_path, class: "btn btn-secondary btn-lg" %>
        </div>
      <% end %>
    </div>
</div>